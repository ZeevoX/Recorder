<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="isLightTheme">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="ThemeOverlay.AppTheme.ActionBar.Accent" parent="@android:style/ThemeOverlay.Material.ActionBar">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>

    <style name="ThemeOverlay.AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Parent theme sets colorControlNormal to textColorPrimary. -->
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeBlack" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBlackDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="isLightTheme">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/colorPrimaryBlackDark</item>
        <item name="android:colorBackground">@color/colorPrimaryBlack</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppThemeRecording" parent = "Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/recording_background</item>
        <item name="colorPrimaryDark">@color/recording_background_dark</item>
        <item name="colorAccent">@color/recording_background</item>
        <item name="android:navigationBarColor">@color/recording_background</item>
        <item name="android:statusBarColor">@color/recording_background</item>
        <item name="android:colorBackground">@color/recording_background</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppThemeBlack.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
