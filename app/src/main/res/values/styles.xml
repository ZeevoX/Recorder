<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="isLightTheme">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="SettingsTheme" parent="@android:style/Theme.Material.Light">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <!--<item name="android:titleTextColor">@color/colorAccent</item>-->
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeRecording" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/recording_background</item>
        <item name="colorPrimaryDark">@color/recording_background_dark</item>
        <item name="colorAccent">@color/recording_background</item>
        <item name="android:navigationBarColor">@color/recording_background</item>
        <item name="android:statusBarColor">@color/recording_background</item>
        <item name="android:colorBackground">@color/recording_background</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
