<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dogscreen_root"
    android:background="#ff263238"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="252.0dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="200.0dip"
            android:layout_height="200.0dip"
            android:src="@drawable/playful_dog"
            android:scaleType="fitCenter"
            android:contentDescription="@string/notice_playful_dog_content_desc" />
        <TextView
            android:textSize="24.0sp"
            android:textColor="#ff64ffda"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="16.0dip"
            android:text="@string/notice_debug_title" />
        <TextView
            android:textSize="16.0sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:layout_marginBottom="56.0dip"
            android:text="@string/notice_debug_desc" />

    </LinearLayout>
    <RelativeLayout
        android:background="#fffafafa"
        android:layout_width="fill_parent"
        android:layout_height="56.0dip"
        android:layout_alignParentBottom="true"
        android:id="@+id/relativeLayout">

        <!-- you can also use android:background="@android:color/transparent" for the button -->
        <Button
            android:id="@+id/dogscreen_confirm_button_debug"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10.0dp"
            android:text="@string/notice_confirmation"
            android:textColor="#ff0097a7"
            android:textSize="16.0sp" />

    </RelativeLayout>
</RelativeLayout>